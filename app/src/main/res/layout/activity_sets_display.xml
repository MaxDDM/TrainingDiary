<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".SetsDisplayActivity">

    <TextView
        android:id="@+id/weightDisplayTextView"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="46dp"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toTopOf="@+id/repsDisplayTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repsDisplayTextView"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:layout_marginBottom="42dp"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toTopOf="@+id/commentsDisplayTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightDisplayTextView" />

    <TextView
        android:id="@+id/commentsDisplayTextView"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:layout_marginBottom="37dp"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toTopOf="@+id/returnToExerciseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repsDisplayTextView" />

    <Button
        android:id="@+id/returnToExerciseButton"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:layout_marginBottom="336dp"
        android:backgroundTint="@color/objectsColor"
        android:fontFamily="@font/montserrat"
        android:text="@string/returnText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentsDisplayTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>